<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/myLinesarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
    android:background="@color/colorAccent"
    android:weightSum="9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            >

                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edit_input"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="60sp"
                    android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_margin="3dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:weightSum="5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    >

                        <Button
                            android:background="@color/colorgray"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="CE"
                            android:textSize="45sp"/>

                        <Button
                            android:id="@+id/btnClear"
                            android:background="@color/colorgray"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="C"
                            android:textSize="45sp"/>

                        <Button
                            android:id="@+id/btnDel"
                            android:background="@color/colorgray"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="DEL"
                            android:textSize="45sp"/>

                        <Button
                            android:id="@+id/btnChia"
                            android:background="@color/colorgray"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="/"
                            android:textSize="45sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">

                        <Button
                            android:id="@+id/btnNumber7"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorwhite"
                            android:text="7"
                            android:textSize="45sp"/>

                        <Button
                            android:id="@+id/btnNumber8"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorwhite"
                            android:text="8"
                            android:textSize="45sp"/>

                        <Button
                            android:id="@+id/btnNumber9"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorwhite"
                            android:text="9"
                            android:textSize="45sp"/>

                        <Button
                            android:id="@+id/btnNhan"
                            android:background="@color/colorgray"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="x"
                            android:textSize="45sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">

                        <Button
                            android:id="@+id/btnNumber4"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorwhite"
                            android:text="4"
                            android:textSize="45sp"
                            />

                        <Button
                            android:id="@+id/btnNumber5"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorwhite"
                            android:text="5"
                            android:textSize="45sp"/>

                        <Button
                            android:id="@+id/btnNumber6"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorwhite"
                            android:text="6"
                            android:textSize="45sp"/>

                        <Button
                            android:id="@+id/btnTru"
                            android:background="@color/colorgray"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="-"
                            android:textSize="45sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">

                        <Button
                            android:id="@+id/btnNumber1"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorwhite"
                            android:text="1"
                            android:textSize="45sp"/>

                        <Button
                            android:id="@+id/btnNumber2"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorwhite"
                            android:text="2"
                            android:textSize="45sp"/>

                        <Button
                            android:id="@+id/btnNumber3"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorwhite"
                            android:text="3"
                            android:textSize="45sp"/>

                        <Button
                            android:id="@+id/btnCong"
                            android:background="@color/colorgray"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="+"
                            android:textSize="45sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">

                        <Button
                            android:background="@color/colorgray"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Â±"
                            android:textSize="45sp"/>

                        <Button
                            android:id="@+id/btnNumber0"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorwhite"
                            android:text="0"
                            android:textSize="45sp"/>

                        <Button
                            android:id="@+id/btnPoint"
                            android:background="@color/colorgray"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="."
                            android:textSize="45sp"/>

                        <Button
                            android:id="@+id/btnResult"
                            android:background="@color/colorgray"
                            android:layout_margin="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="="
                            android:textSize="45sp"/>
                </LinearLayout>

        </LinearLayout>




</LinearLayout>

